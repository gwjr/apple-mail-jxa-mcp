{
  "compilerOptions": {
    "target": "ES2022",
    "module": "None",
    "lib": ["ES2023", "DOM"],
    "outFile": "dist/editor-check.js",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noEmit": true,
    "declaration": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "tests/src/**/*.ts"
  ]
}
